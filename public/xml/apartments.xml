<?xml version="1.0" encoding="UTF-8"?>
<root>
    <update_object>
        <table_structure>
            <row_list>
                <row>listtype_id</row>
                <tag_list>listtype_id</tag_list>
            </row_list>
            <row_list>
                <row>name</row>
                <tag_list>name,slug</tag_list>
            </row_list>
        </table_structure>
        <formfield_list>
            <listtype_id>
                <label>Danh mục căn hộ</label>
                <type>select</type>
                <required>true</required>
                <listtype_code>DM_CAN_HO</listtype_code>
                <xml_data>false</xml_data>
                <xml_tag_in_db>false</xml_tag_in_db>
                <column_name>listtype_id</column_name>
                <width>100%</width>
                <class_input>chzn-select form-control</class_input>
                <placeholder></placeholder>
                <object></object> <!-- trường đặc biệt -->
                <onchange></onchange>
                <value_default></value_default>
            </listtype_id>
            <name>
                <label>Tên căn hộ</label>
                <type>text</type>
                <required>true</required>
                <xml_data>true</xml_data>
                <xml_tag_in_db>false</xml_tag_in_db>
                <column_name>name</column_name>
                <width>100%</width>
                <class_div_input>col-md-3</class_div_input>
                <class_input>form-control</class_input>
                <placeholder>Nhập tên căn hộ</placeholder>
                <object></object> <!-- trường đặc biệt -->
                <onchange></onchange>
                <value_default></value_default>
            </name>
            <slug>
                <label>Đường dẫn</label>
                <type>text</type>
                <required>true</required>
                <xml_data>true</xml_data>
                <xml_tag_in_db>false</xml_tag_in_db>
                <column_name>slug</column_name>
                <width>100%</width>
                <class_input>form-control</class_input>
                <placeholder>Nhập đường dẫn</placeholder>
                <object></object> <!-- trường đặc biệt -->
                <onchange></onchange>
                <value_default></value_default>
            </slug>
            <images>
                <label>Ảnh đại diện</label>
                <type>file</type>
                <required>true</required>
                <xml_data>true</xml_data>
                <xml_tag_in_db>false</xml_tag_in_db>
                <column_name>images</column_name>
                <width>100%</width>
                <class_input></class_input>
                <placeholder>Nhập tên căn hộ</placeholder>
                <object></object> <!-- trường đặc biệt -->
                <onchange>JS_Apartment.showImage(this)</onchange>
                <click></click>
                <value_default></value_default>
            </images>
        </formfield_list>
    </update_object>
</root>